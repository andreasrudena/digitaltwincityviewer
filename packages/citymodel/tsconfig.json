{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "es6",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/"],
  "exclude": ["dist", "node_modules"]
}